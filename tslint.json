{
  "extends": "tslint-config-semistandard",
  "rules": {
    "deprecation": false,
    "file-header": [true, "Copyright"],
    "space-before-function-paren": false,
    "no-multi-spaces": false,
    "strict-type-predicates": false,
    "no-unused-variable": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
